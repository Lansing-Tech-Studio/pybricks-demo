{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pybricks: Run on Robot",
            "type": "debugpy",
            "request": "launch",
            "module": "pybricksdev",
            "args": [
                "run",
                "--name",
                "${config:pybricks.robotName}",
                "ble",
                "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Pybricks: Run on Robot (Select)",
            "type": "debugpy",
            "request": "launch",
            "module": "pybricksdev",
            "args": [
                "run",
                "--name",
                "${input:robotName}",
                "ble",
                "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ],
    "inputs": [
        {
            "id": "robotName",
            "type": "pickString",
            "description": "Select robot to run on",
            "options": [
                "LHHDemoBot",
                "DudeBot",
                "ChickenBot"
            ],
            "default": "LHHDemoBot"
        }
    ]
}
